<component name="LinkScreen" extends="Group">
	<children>
	
		<Rectangle
			id="background"
			color="0x19171c"
			width="1920"
			height="1080" />
	
		<Label
			id="title"
			width="600"
			height="100"
			translation="[350, 25]"
			horizAlign="center"
			vertAlign="center"
			wrap="true"
			numLines="1"
			maxLines="1"
			font="font:LargeBoldSystemFont" />
			
		<Label
			id="message"
			width="600"
			height="100"
			translation="[350, 125]"
			horizAlign="center"
			vertAlign="center"
			wrap="true"
			numLines="3"
			maxLines="3"
			font="font:MediumSystemFont" />
			
		<Label
			id="code"
			width="600"
			height="100"
			translation="[350, 225]"
			horizAlign="center"
			vertAlign="center"
			wrap="true"
			numLines="1"
			maxLines="1"
			font="font:LargeBoldSystemFont" />
			
		<Label
			id="message_footer"
			width="600"
			height="100"
			translation="[350, 325]"
			horizAlign="center"
			vertAlign="center"
			wrap="true"
			numLines="3"
			maxLines="3"
			font="font:SmallSystemFont" />
			
		<Label
			id="url"
			width="600"
			height="100"
			translation="[100, 450]"
			horizAlign="left"
			vertAlign="center"
			wrap="true"
			numLines="1"
			maxLines="1"
			font="font:LargeSystemFont" />
			
		<Timer 
			id="timer"
			repeat="true"
			duration="10" />
    		
	</children>

	<interface>
		<!-- Fields -->
		<field id="linked_token" type="assocarray" alwaysNotify="true" />
		<field id="do_link" type="boolean" alwaysNotify="true" />
		<field id="error" type="integer" alwaysNotify="true" />
		<field id="timeout" type="boolean" alwaysNotify="true" />
	</interface>

	<script type="text/brightscript" uri="pkg:/components/LinkScreen.brs" />
	<script type="text/brightscript" uri="pkg:/components/Util.brs" />
</component>