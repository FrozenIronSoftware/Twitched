<component name="InfoScreen" extends="Group">
	<children>
	
		<Rectangle
			id="background"
			color="0x19171c"
			width="1920"
			height="1080" />
			
		<Poster
			id="preview"
			width="292"
			height="180"
			translation="[300,130]"
			loadingBitmapUri="pkg:/locale/default/images/poster_loading.png"
			failedBitmapUri="pkg:/locale/default/images/poster_error.png" />
	
		<Label
			id="title"
			width="600"
			height="100"
			translation="[350, 25]"
			horizAlign="center"
			vertAlign="center"
			wrap="true"
			numLines="2"
			maxLines="2" />

    	<ButtonGroup
    		id="buttons"
    		minWidth="250"
    		maxWidth="500"
    		translation="[650,120]" />
    		
    	<Group
    		id="stream_info"
    		translation="[300,330]" >
    		
	    	<Label
				id="viewers"
				width="300"
				height="100"
				translation="[0,0]"
				horizAlign="left"
				vertAlign="center"
				wrap="false"
				numLines="1"
				maxLines="1" />
				
			<Label
				id="start_time"
				width="500"
				height="100"
				translation="[350,0]"
				horizAlign="left"
				vertAlign="center"
				wrap="false"
				numLines="1"
				maxLines="1" />
				
			<Label
				id="language"
				width="300"
				height="100"
				translation="[0,55]"
				horizAlign="left"
				vertAlign="center"
				wrap="false"
				numLines="1"
				maxLines="1" />
				
			<Label
				id="stream_type"
				width="300"
				height="100"
				translation="[350,55]"
				horizAlign="left"
				vertAlign="center"
				wrap="false"
				numLines="1"
				maxLines="1" />
			
		</Group>
		
		<RowList
			id="vods_list"
			visible="false"
			translation="[140,350]"
			itemComponentName="VodItem"
			itemSize="[1000,200]"
			itemSpacing="[0,0]"
			numRows="1"
			rowItemSize="[[195,150]]"
			rowItemSpacing="[[20,0]]"
			showRowLabel="[true]"
			showRowCounter="[true]"
			rowFocusAnimationStyle="floatingFocus"
			vertFocusAnimationStyle="fixedFocusWrap"
			rowLabelColor="0xffffff"
			rowLabelFont="font:MediumSystemFont"
			rowLabelOffset="[[0,20]]"
			drawFocusFeedbackOnTop="true"
			drawFocusFeedback="true"
			imageWellBitmapUri=
    			"pkg:/locale/default/images/transparent.png"
    		focusFootprintBitmapUri=""
    		loadingBitmapUri="pkg:/locale/default/images/poster_loading.png"
    		failedBitmapUri="pkg:/locale/default/images/poster_error.png" >
			<ContentNode role="content" />
		</RowList>
		
		<TwitchApi 
    		id="twitch_api" />
    		
    	<Label
			id="message"
			width="1000"
			height="295"
			translation="[140, 310]"
			horizAlign="center"
			vertAlign="center"
			wrap="true"
			numLines="3"
			maxLines="3" />
			
		<Dialog 
			id="dialog"
			visible="false" />
			
		<ProgressDialog
			id="loading_dialog"
			visible="false" />

	</children>

	<interface>
		<!-- Fields -->
		<field id="preview_image" type="string" alwaysNotify="true" />
		<field id="title" type="string" alwaysNotify="true" />
		<field id="streamer" type="array" alwaysNotify="true" />
		<field id="game" type="array" alwaysNotify="true" />
		<field id="viewers" type="integer" alwaysNotify="true" />
		<field id="start_time" type="string" alwaysNotify="true" />
		<field id="language" type="string" alwaysNotify="true" />
		<field id="stream_type" type="string" alwaysNotify="true" />
		<field id="game_selected" type="string" alwaysNotify="true" />
		<field id="play_selected" type="string" alwaysNotify="true" />
		<field id="focus" type="string" alwaysNotify="true" />
		<field id="token" type="string" alwaysNotify="true" />
		<field id="user_name" type="string" alwaysNotify="true" />
		<field id="video_selected" type="node" alwaysNotify="true" />
		<field id="options" type="boolean" alwaysNotify="true" />
		<field id="dialog" type="node" alwaysNotify="true" />
	</interface>

	<script type="text/brightscript" uri="pkg:/components/InfoScreen.brs" />
	<script type="text/brightscript" uri="pkg:/components/Util.brs" />
</component>